<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@if (Visible)
{
    <div class="card col-8 shadow">
        <div class="card-header text-center">
            Taller Blazor Web Assembly
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    Sesion : @NumeroSesion
                </div>
                <div class="col-8">
                    @switch (NumeroSesion)
                    {
                        case 1:
                            <span> Front End vs Back End, Estructura Proyecto Web Assembly </span>
                            break;
                        case 2:
                            <span>Características componentes, ViewModel, EditForm</span>
                            break;
                        case 3:
                            <span>Bootstrap</span>
                            break;
                        case 4:
                            <span>Condicionales, Blucles, Listas</span>
                            break;
                    }
                </div>
            </div>
        </div>
        <div class="card-footer text-end" style="">
            <button class="btn btn-outline-success" @onclick="Cerrar"><i class="fa fa-close"></i> Cerrar</button>
        </div>
    </div>
}

<br /><br />

@code {

    [Parameter] public int NumeroSesion { get; set; } = 1;
    
    private bool Visible { get; set; } = true;

    private void Cerrar()
    {
        Visible = false;
    }
    
}
